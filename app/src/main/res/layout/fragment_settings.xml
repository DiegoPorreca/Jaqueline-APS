<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Título da Tela de Configurações -->
    <TextView
        android:id="@+id/textViewSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações do Aplicativo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#009688"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Opção 1: Tema Escuro/Claro -->
    <TextView
        android:id="@+id/textViewTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modo Escuro (Dark Mode)"
        android:textSize="18sp"
        android:paddingVertical="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSettingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switchTheme"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textViewTheme"
        app:layout_constraintBottom_toBottomOf="@id/textViewTheme"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/textViewTheme"
        android:layout_marginTop="4dp"/>

    <!-- Opção 2: Versão do Aplicativo -->
    <TextView
        android:id="@+id/textViewVersionLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Versão do App"
        android:textSize="18sp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewVersionValue"/>

    <TextView
        android:id="@+id/textViewVersionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0 (Acadêmico)"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/textViewVersionLabel"
        app:layout_constraintBottom_toBottomOf="@id/textViewVersionLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/textViewVersionLabel"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
